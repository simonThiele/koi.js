{
  "name": "koi.js",
  "version": "0.0.4",
  "description": "A framework for object property interpolation over time",
  "main": "build/index.js",
  "scripts": {
    "test": "npm run lint && npm run execute-tests",
    "lint": "eslint src/**",
    "execute-tests": "mocha --compilers js:babel-register --reporter dot $(find test -name '*_test.es6')",
    "build": "webpack ./src/index.es6 --out ./build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonThiele/koi.js.git"
  },
  "keywords": [
    "animation",
    "tween",
    "javascript",
    "js"
  ],
  "author": "Simon Thiele simon@instana.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonThiele/koi.js/issues"
  },
  "homepage": "https://github.com/simonThiele/koi.js#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "eslint": "^2.4.0",
    "eslint-config-google": "^0.4.0",
    "mocha": "^2.4.5",
    "webpack": "^1.12.12"
  }
}
